@using CinemaTicket.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--<title> Responsive Login and Signup Form </title>-->
    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/Login.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <section class="container forms">
        <div class="form login">
            <div class="form-content">
                <header style="color: #eb315a">LOG IN</header>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()


                    <div class="field input-field">
                        @*<input type="email" placeholder="Username" class="input">*@
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
                    </div>
                    <div class="field input-field">
                        @*<input type="password" placeholder="Password" class="password">*@
                        <!--<i class='bx bx-hide eye-icon'></i>-->
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })

                    </div>
                    <div class="form-link">
                        <a href="#" class="forgot-pass">Forgot password?</a>
                    </div>
                    <div class="field button-field">

                        <button type="submit">LOG IN</button>
                    </div>
                }

                <div class="field button-field">
                    <button> <a style="color: #fff;" href="@Url.Action("Register", "Account")">SIGN UP</a></button>
                </div>
            </div>

        </div>
    </section>
    <!-- JavaScript -->
    <!--<script src="js/script.js"></script>-->
</body>
</html>

