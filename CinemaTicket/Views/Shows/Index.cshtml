@model IEnumerable<CinemaTicket.Models.CinemaModels.Show>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cinema.CinemaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowDay.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowTime.Time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cinema.CinemaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.MovieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowDay.Day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowTime.Time)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ShowId })
        </td>
    </tr>
}

</table>
