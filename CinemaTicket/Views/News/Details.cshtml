                        <li><a href="#">April 2018</a></li>
                    </ul>
                    <div class="portfolio-sidebar">
                        <img src="assets/img/sidebar/sidebar1.png" alt="sidebar" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- blog area end -->

@{
    Html.RenderPartial("_FooterPartial");
}