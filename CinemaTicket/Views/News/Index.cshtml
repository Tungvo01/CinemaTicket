@model IEnumerable<CinemaTicket.Models.CinemaModels.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("_HeaderPartial");
}
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Blog Page</h1>
                </div>
            </div>
        </div>
    </div>
</section><!-- breadcrumb area end -->


    <!-- blog area start -->
    <section class="blog-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title pb-20">
                        <h1><i class="icofont icofont-coffee-cup"></i> Latest News</h1>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-12">
                    @foreach (var news in Model)
                    {
                        <div class="single-news">
                            <div class="news-bg-1"></div>
                            <div class="news-date">
                                <h2><span>NOV</span> 25</h2>
                                <h1>2017</h1>
                            </div>
                            <div class="news-content">
                                <h2>@news.Title</h2>
                                <p>@news.Description</p>
                            </div>
                            <a>@Html.ActionLink("Read More", "Details", new { id = news.NewsId })</a>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </section><!-- blog area end -->


@{
    Html.RenderPartial("_FooterPartial");
}



