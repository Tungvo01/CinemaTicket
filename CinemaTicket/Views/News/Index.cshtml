
@model PagedList.IPagedList<CinemaTicket.Models.CinemaModels.News>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("_HeaderPartial");
}
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Blog</h1>
                </div>
            </div>
        </div>
    </div>
</section><!-- breadcrumb area end -->
<!-- blog area start -->
<section class="blog-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title pb-20">
                    <h1><i class="icofont icofont-coffee-cup"></i> Latest News</h1>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                @foreach (var news in Model)
                {
                    <div class="single-news">
                        <div class="news-bg-1"></div>
                        <div class="news-date">
                            <h2><span>NOV</span> 21</h2>
                            <h1>2022</h1>
                        </div>
                        <div class="news-content">
                            <h2>@news.Title</h2>
                            @*<p>@news.Description</p>*@
                        </div>
                        <a>@Html.ActionLink("Read More", "Details", new { id = news.NewsId })</a>
                    </div>
                }
            </div>
            <div style="display: flex; justify-content: flex-end; margin-top: 20px; font-size: 15px;" class="page">
                @*Page: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount*@

                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</section><!-- blog area end -->


@{
    Html.RenderPartial("_FooterPartial");
}



