@model CinemaTicket.Models.CinemaModels.Celebrity

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*<h2>Create</h2>*@
<div class="page-header">
    <h4 class="page-title"> Create </h4>
</div>

@using (Html.BeginForm("Create", "Celebrities", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "Full Name", @class = "form-control text-light" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Height</label>
                        @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @placeholder = "Meter", @class = "form-control text-light" } })
                        @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Weight</label>
                        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @placeholder = "Kilogram", @class = "form-control text-light" } })
                        @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Avatar</label>
                        <div class="input-group col-xs-12">
                            @Html.ValidationMessageFor(model => model.UrlAvatar, "", new { @class = "text-danger" })
                            <span class="input-group-append">

                                @Html.EditorFor(model => model.UrlAvatar, new { htmlAttributes = new { @class = "form-control", @type = "file", Name = "upload" } })

                                @Html.ValidationMessageFor(model => model.UrlAvatar, "", new { @class = "text-danger" })
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Language</label>
                        @Html.EditorFor(model => model.Language, new { htmlAttributes = new { @placeholder = "Language", @class = "form-control text-light" } })
                        @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Description, new { @placeholder = "Description", @class = "form-control text-light", @id = "exampleTextarea1", @rows = "4" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Save  </button>
                </form>
            </div>
        </div>
    </div>
}

