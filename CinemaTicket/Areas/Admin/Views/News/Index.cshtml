<div class="page-header">
    <h4 class="page-title"> News </h4>
    <div class="row float-sm-right">
        <a class="btn btn-success mr-2" href="@Url.Action("Create", "News")">Add News</a>
    </div>
</div>

    <div class=" w-100">
        <div class="nav-item w-100">
            <form class="input-group nav-link mt-2 mt-md-0  d-lg-flex search col-md-5 ">
                <input type="text" class="form-control text-light" placeholder="Search movies">
                <span class="input-group-append">
                    <button class="btn btn-primary" type="submit"><i class="mdi mdi-magnify" width="40px"></i></button>
                </span>
            </form>
        </div>
    </div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Movie's Name </th>
                            <th> Title </th>
                            <th> Description </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td> @Html.DisplayFor(modelItem => item.Movie.MovieName) </td>

                                <td> @Html.DisplayFor(modelItem => item.Title) </td>

                                <td> @Html.DisplayFor(modelItem => item.Description) </td>


                                <td class=" text-right">
                                    <a class="btn bg-warning mr-2" href="@Url.Action("Edit", new { id = item.NewsId })">Edit</a>
                                    <a class="btn btn-secondary mr-2" href="@Url.Action("Details", new { id = item.NewsId, MovieName = item.Movie.MovieName })">Details</a>
                                    <a class="btn bg-danger mr-2" href="@Url.Action("Delete", new { id = item.NewsId, MovieName = item.Movie.MovieName })">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>