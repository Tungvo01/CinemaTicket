<div class="page-header">
    <h4 class="page-title"> Show </h4>
    <div class="row float-sm-right">
        <a class="btn btn-success mr-2" href="@Url.Action("Create", "Shows")">Add Show</a>
    </div>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Cinema's Name </th>
                            <th> Movie's Name </th>
                            <th> Show Day </th>
                            <th> Time </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td> @Html.DisplayFor(modelItem => item.Cinema.CinemaName) </td>

                                <td> @Html.DisplayFor(modelItem => item.Movie.MovieName) </td>

                                <td> @Html.DisplayFor(modelItem => item.ShowDay.Day) </td>

                                <td> @Html.DisplayFor(modelItem => item.ShowTime.Time) </td>


                                <td class=" text-right">
                                    <a class="btn bg-warning mr-2" href="@Url.Action("Edit", new { id = item.ShowId })">Edit</a>
                                    <a class="btn btn-secondary mr-2" href="@Url.Action("Details", new { id = item.ShowId })">Details</a>
                                    <a class="btn bg-danger mr-2" href="@Url.Action("Delete", new { id = item.ShowId })">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>