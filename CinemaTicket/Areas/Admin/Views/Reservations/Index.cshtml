<div class="page-header">
    <h4 class="page-title"> Reservation </h4>
    <div class="row float-sm-right">
        <a class="btn btn-success mr-2" href="@Url.Action("Create", "Reservations")">Add Reservation</a>
    </div>
</div>
<div class="page-header">
    <div class="float-sm-right ">
        <a class="btn btn-info mr-2" href="@Url.Action("ExportToExcel", "Reservations")">Export To Excel</a>
    </div>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Name </th>
                            <th> Seat No. </th>
                            <th> Movie's Name </th>
                            <th> Day </th>
                            <th> Time </th>
                            <th> Cinema's Name </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td> @Html.DisplayFor(modelItem => item.Customer.Name) </td>

                                <td> @Html.DisplayFor(modelItem => item.Seat.SeatNo) </td>

                                <td> @Html.DisplayFor(modelItem => item.Show.Movie.MovieName) </td>

                                <td> @Html.DisplayFor(modelItem => item.Show.ShowDay.Day) </td>

                                <td> @Html.DisplayFor(modelItem => item.Show.ShowTime.Time) </td>

                                <td> @Html.DisplayFor(modelItem => item.Show.Cinema.CinemaName) </td>

                                <td class=" text-right">
                                    <a class="btn bg-warning mr-2" href="@Url.Action("Edit", new { id = item.ReservationId })">Edit</a>
                                    <a class="btn btn-secondary mr-2" href="@Url.Action("Details", new { id = item.ReservationId })">Details</a>
                                    <a class="btn bg-danger mr-2" href="@Url.Action("Delete", new { id = item.ReservationId })">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>