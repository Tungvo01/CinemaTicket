                                    <a class="btn bg-warning mr-2" href="@Url.Action("Edit", new { id = item.SeatId })">Edit</a>
                                    <a class="btn btn-secondary mr-2" href="@Url.Action("Details", new { id = item.SeatId })">Details</a>
                                    <a class="btn bg-danger mr-2" href="@Url.Action("Delete", new { id = item.SeatId })">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
